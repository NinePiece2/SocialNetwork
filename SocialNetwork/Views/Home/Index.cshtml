@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Welcome to MySocialNetwork</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .form-container {
            display: none;
        }
    </style>
</head>
<body>
    <div class="card text-center">
        <div class="card-body">
            <h1 class="card-title">Welcome to MySocialNetwork</h1>
            <p class="card-text">Connect with friends and the world around you.</p>

            <!-- Login Form -->
            <div class="form-container" id="loginForm">
                @Html.Partial("~/Views/User/Login.cshtml")
            </div>

            <!-- Register Form -->
            <div class="form-container" id="registerForm">
                @Html.Partial("~/Views/User/Register.cshtml")
            </div>

            <!-- Buttons to toggle forms -->
            <button type="button" id="loginButton" class="btn btn-primary" onclick="toggleForm('loginForm')">Log In</button>
            <button type="button" id="registerButton" class="btn btn-success" onclick="toggleForm('registerForm')">Register</button>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleForm(formId) {
            var form = document.getElementById(formId);
            var loginButton = document.getElementById('loginButton');
            var registerButton = document.getElementById('registerButton');

            if (formId === 'loginForm') {
                form.style.display = 'block';
                loginButton.style.display = 'none';
                registerButton.style.display = 'block';
            } else if (formId === 'registerForm') {
                form.style.display = 'block';
                loginButton.style.display = 'block';
                registerButton.style.display = 'none';
            } else {
                form.style.display = 'none';
                loginButton.style.display = 'block';
                registerButton.style.display = 'block';
            }
        }
    </script>
</body>
</html>
